from waflib.Tools import waf_unit_test


def build(bld):
    if bld.env.CXX_NAME.lower() == "msvc":
        bld.env.append_unique("CXXFLAGS", ["/EHa", "/MTd"])
    bld(
        features="cxx cxxprogram test",
        source="testrunner.cpp",
        use="GTESTD",
        target="testrunner",
    )
    bld.add_post_fun(waf_unit_test.summary)
